<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Page Style -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
    </Style>

    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,15" />
        <Setter Property="HeightRequest" Value="54" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray400}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,15" />
        <Setter Property="HeightRequest" Value="54" />
    </Style>

    <!-- Entry Style -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Card Frame -->
    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Title Label -->
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Subtitle Label -->
    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Section Header -->
    <Style x:Key="SectionHeader" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,20,0,10" />
    </Style>

    <!-- Price Label -->
    <Style x:Key="PriceLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Activity Indicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

    <!-- Seat Button Base -->
    <Style x:Key="SeatButton" TargetType="Button">
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- Available Seat -->
    <Style x:Key="AvailableSeat" TargetType="Button" BasedOn="{StaticResource SeatButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource SeatAvailable}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- Booked Seat -->
    <Style x:Key="BookedSeat" TargetType="Button" BasedOn="{StaticResource SeatButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource SeatBooked}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="IsEnabled" Value="False" />
    </Style>

    <!-- Selected Seat -->
    <Style x:Key="SelectedSeat" TargetType="Button" BasedOn="{StaticResource SeatButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource SeatSelected}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

</ResourceDictionary>
