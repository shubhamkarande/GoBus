<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GoBusApp.ViewModels"
             x:Class="GoBusApp.Views.Auth.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20" VerticalOptions="Center">
            
            <!-- Logo -->
            <VerticalStackLayout Spacing="8" Margin="0,0,0,30">
                <Label Text="ðŸšŒ" FontSize="60" HorizontalOptions="Center"/>
                <Label Text="GoBus" 
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Your Commute, Simplified" 
                       FontSize="16"
                       TextColor="White"
                       Opacity="0.9"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
            
            <!-- Login Form Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="16" 
                   Padding="20"
                   HasShadow="True"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Welcome Back" 
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"/>
                    
                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email Address" TextColor="#666666" FontSize="14"/>
                        <Entry Placeholder="Enter your email"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               ReturnType="Next"
                               TextColor="#333333"
                               PlaceholderColor="#AAAAAA"
                               BackgroundColor="#F0F0F0"
                               HeightRequest="50"/>
                    </VerticalStackLayout>
                    
                    <!-- Password Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password" TextColor="#666666" FontSize="14"/>
                        <Entry Placeholder="Enter your password"
                               Text="{Binding Password}"
                               IsPassword="True"
                               ReturnType="Done"
                               TextColor="#333333"
                               PlaceholderColor="#AAAAAA"
                               BackgroundColor="#F0F0F0"
                               HeightRequest="50"/>
                    </VerticalStackLayout>
                    
                    <!-- Login Button -->
                    <Button Text="Login"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="54"
                            CornerRadius="12"
                            Margin="0,10,0,0"/>
                    
                    <!-- Loading -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}"/>
                    
                </VerticalStackLayout>
            </Frame>
            
            <!-- Register Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                <Label Text="Don't have an account?"
                       TextColor="White"
                       Opacity="0.9"
                       VerticalOptions="Center"/>
                <Button Text="Sign Up"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        Padding="0"
                        Command="{Binding GoToRegisterCommand}"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
