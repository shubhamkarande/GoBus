<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GoBusApp.ViewModels"
             xmlns:models="clr-namespace:GoBusApp.Models"
             x:Class="GoBusApp.Views.Search.SearchPage"
             x:DataType="viewmodels:SearchViewModel"
             Title="Search Buses"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Search Form -->
        <Frame Grid.Row="0" 
               BackgroundColor="White"
               CornerRadius="20"
               BorderColor="Transparent"
               HasShadow="True"
               Padding="16"
               Margin="16,16,16,0">
            <VerticalStackLayout Spacing="16">
                
                <!-- From/To Fields with Swap -->
                <Grid ColumnDefinitions="*,Auto,*">
                    
                    <!-- From -->
                    <VerticalStackLayout Grid.Column="0" Spacing="6">
                        <Label Text="FROM" FontSize="12" TextColor="#666666" FontAttributes="Bold"/>
                        <Entry Placeholder="Departure City"
                               Text="{Binding Source}"
                               TextColor="#333333"
                               PlaceholderColor="#AAAAAA"
                               BackgroundColor="#F0F0F0"
                               HeightRequest="45"
                               FontSize="14"/>
                    </VerticalStackLayout>
                    
                    <!-- Swap Button -->
                    <Button Grid.Column="1" 
                            Text="â‡„" 
                            FontSize="20"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            WidthRequest="44"
                            HeightRequest="44"
                            CornerRadius="22"
                            VerticalOptions="End"
                            Margin="8,0"
                            Command="{Binding SwapLocationsCommand}"/>
                    
                    <!-- To -->
                    <VerticalStackLayout Grid.Column="2" Spacing="6">
                        <Label Text="TO" FontSize="12" TextColor="#666666" FontAttributes="Bold"/>
                        <Entry Placeholder="Destination City"
                               Text="{Binding Destination}"
                               TextColor="#333333"
                               PlaceholderColor="#AAAAAA"
                               BackgroundColor="#F0F0F0"
                               HeightRequest="45"
                               FontSize="14"/>
                    </VerticalStackLayout>
                    
                </Grid>
                
                <!-- Date Picker -->
                <VerticalStackLayout Spacing="6">
                    <Label Text="TRAVEL DATE" FontSize="12" TextColor="#666666" FontAttributes="Bold"/>
                    <Frame BackgroundColor="#F0F0F0" 
                           Padding="12,0"
                           HeightRequest="45"
                           CornerRadius="8"
                           BorderColor="Transparent">
                        <DatePicker Date="{Binding TravelDate}"
                                    MinimumDate="{Binding MinDate}"
                                    MaximumDate="{Binding MaxDate}"
                                    Format="ddd, dd MMM yyyy"
                                    TextColor="#333333"
                                    VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Search Button -->
                <Button Text="ðŸ” Search Buses"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"
                        Command="{Binding SearchCommand}"
                        IsEnabled="{Binding IsNotBusy}"/>
                
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="{Binding IsBusy}"
                                   Color="{StaticResource Primary}"/>
                
            </VerticalStackLayout>
        </Frame>
        
        <!-- Results -->
        <ScrollView Grid.Row="1" Padding="16">
            <VerticalStackLayout Spacing="12">
                
                <!-- No Results -->
                <Frame BackgroundColor="White"
                       CornerRadius="16"
                       BorderColor="Transparent"
                       HasShadow="True"
                       IsVisible="{Binding NoResults}"
                       Padding="30">
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="ðŸšŒ" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No buses found" 
                               FontSize="18"
                               TextColor="#333333"
                               HorizontalOptions="Center"/>
                        <Label Text="Try different dates or routes" 
                               TextColor="#666666"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Bus List -->
                <CollectionView ItemsSource="{Binding Buses}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Bus">
                            <Frame BackgroundColor="White" 
                                   CornerRadius="16" 
                                   BorderColor="Transparent"
                                   HasShadow="True"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=SelectBusCommand}"
                                        CommandParameter="{Binding}"/>
                                </Frame.GestureRecognizers>
                                
                                <VerticalStackLayout Spacing="12">
                                    
                                    <!-- Bus Name & Type -->
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#333333"/>
                                        <Frame BackgroundColor="{StaticResource Primary}" 
                                               Padding="8,4" 
                                               CornerRadius="4"
                                               BorderColor="Transparent">
                                            <Label Text="{Binding BusTypeDisplay}" 
                                                   FontSize="11" 
                                                   TextColor="White"/>
                                        </Frame>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Times -->
                                    <Grid ColumnDefinitions="*,Auto,*">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding FormattedDepartureTime}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="#333333"/>
                                            <Label Text="{Binding Source}" 
                                                   FontSize="12" 
                                                   TextColor="#666666"/>
                                        </VerticalStackLayout>
                                        
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                                            <Label Text="{Binding Duration}" 
                                                   FontSize="12" 
                                                   TextColor="#666666"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="â†’" 
                                                   FontSize="20" 
                                                   TextColor="{StaticResource Primary}"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        
                                        <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                                            <Label Text="{Binding FormattedArrivalTime}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="#333333"
                                                   HorizontalOptions="End"/>
                                            <Label Text="{Binding Destination}" 
                                                   FontSize="12" 
                                                   TextColor="#666666"
                                                   HorizontalOptions="End"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                    
                                    <BoxView HeightRequest="1" Color="#EEEEEE"/>
                                    
                                    <!-- Price & Seats -->
                                    <HorizontalStackLayout>
                                        <Label Text="{Binding FormattedPrice}" 
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Primary}"/>
                                        <Label Text=" per seat" 
                                               TextColor="#666666"
                                               VerticalOptions="End"
                                               Margin="0,0,0,2"/>
                                        
                                        <Label HorizontalOptions="EndAndExpand">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding AvailableSeats}" 
                                                          TextColor="{StaticResource Success}" 
                                                          FontAttributes="Bold"/>
                                                    <Span Text=" seats available" 
                                                          TextColor="#666666"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </HorizontalStackLayout>
                                    
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
</ContentPage>
